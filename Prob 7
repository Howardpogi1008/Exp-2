#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	cout << " " << endl;
	cout << " Experiment 2.7!!! " << endl;
	cout << "______________________________________________ " << endl;
	cout << " " << endl;

	x:
	int num1, num = 0;

	cout << " Please enter a number: ";     
	cin >> num1;
	cout << " ";
	cout << " " << endl;
	if (num1 > 0)
	{

		for (int h = num1; h >= 1; h--)
		{
			num = num + h;
		}

		cout << " The sum of all whole numbers from 1 to " << num1 << " is: " << num << endl;
		cout << " " << endl;
		cout << "______________________________________________ " << endl;
		cout << " " << endl;
	}
	else
	{
		cout << " Thank you " << endl;
		cout << "______________________________________________ " << endl;
		cout << " " << endl;
	}

	goto x;
	
	_getch();
	return 0;
}

